<% layout("layouts/boilerplate") %>
    <div id="cluster-map"></div>
    <h1 class="text-center">All Campgrounds</h1>
    <div class="text-center">
        <a href="/campgrounds/new">Add a campground</a>
    </div>
    <% for(let campground of campgrounds){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length){ %>
                        <img src="<%= campground.images[0].fill%> " class="img-fluid" alt="">
                        <% }else{ %>
                            <img src="https://res.cloudinary.com/zihaozhe/image/upload/v1639625029/Yelpcamp/joshua-earle-tUb9a0RB04k-unsplash_vedy9r.jpg"
                                class="img-fluid" alt="">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-txt">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">View <%= campground.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const campgrounds = '<%-JSON.stringify(campgrounds)%>';
            </script>
            <script src="/javascripts/clusterMap.js"></script>